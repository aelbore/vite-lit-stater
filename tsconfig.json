{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "allowJs": true,
    "outDir": "dist",
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": [
      "ES2019",
      "DOM"
    ],
    "paths": {
      "/@/src/*": [ "./src/*" ]
    },
    "types": ["vitest/globals"]
  },
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}