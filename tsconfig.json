{
  "compilerOptions": {
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "dist",
    "target": "es2015",
    "module": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": [
      "ES2019",
      "DOM"
    ],
    "paths": {
      "/@/src/*": [ "./src/*" ]
    },
    "types": [ "vitest/globals" ]
  },
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}